<div class="poster mediacard" style="position:relative">
  <div class="wrapper">
    <!--background poster-->
    <div class="background"
         style="background: url(<%=imageURL+(media.profile_path || media.poster_path)%>) center/cover no-repeat;">
    </div>
    <!--data-->
    <div class="data <%=mediaType !== 'person' ? ('shiftVertically') :null%>">
      <div class="content px-2 <%=mediaType !== 'person' ? ('py-3') :null%>">
        <span class="author"><%=media.known_for_department || (media.release_date || media.first_air_date).slice(0, 4)%></span>
        <a style="text-decoration: none;" href="/info/<%=mediaType%>/<%=media.id%>"><h2
                  class="title text-white pb-2"><%=media.title || media.name%>
          </h2></a>
        <% if(mediaType !== "person"){ %>
        <p class="text" style="overflow: hidden;height: 4.7rem;"><%=media.overview%></p>
        <a href="/info/<%=mediaType%>/<%=media.id%>" class="button" style="text-decoration: none">....
          Read more</a>
        <% } %>
      </div>
    </div>
  </div>

  <!--ratings-->
  <% if(mediaType !== "person"){ %>
    <div style="width: 3.3rem;position: absolute;top:-1rem;right:-1rem;">
      <%-include("ratings")%>
    </div>
  <% } %>
</div>